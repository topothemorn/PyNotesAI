#app-grid {
    layout: grid;
    grid-size: 3 1; /* 3 columns, 1 row */
    grid-columns: 1fr 2fr 1fr; /* Notes | Editor | Gemini */
    height: 1fr;
}

#notes-panel {
    border-right: thick $border;
    padding: 1;
}

#editor-panel {
    padding: 1;
}

#gemini-panel {
    border-left: thick $border;
    padding: 1;
    layout: vertical; /* Explicitly set vertical layout for children */
}

.panel-title {
    text-align: center;
    text-style: bold;
    margin-bottom: 1;
}

#notes-list {
    height: 1fr;
}

#note-editor {
    height: 1fr;
}

#gemini-input {
    height: 5; /* Fixed height for input */
}

#gemini-output-scrollable {
    height: 1fr; /* Take remaining vertical space */
    border-top: thick $border;
}

#api-key-dialog-container {
    align: center middle;
    width: 50%;
    height: auto;
    background: $background;
    border: thick $border;
    padding: 2;
    layout: vertical;
}

#api-key-input {
    margin-top: 1;
    margin-bottom: 1;
}

#save-api-key {
    align: center middle;
}

#rename-dialog-container {
    align: center middle;
    width: 40%;
    height: auto;
    background: $background;
    border: thick $border;
    padding: 2;
    layout: vertical;
}

#rename-dialog-buttons {
    layout: horizontal;
    align: center middle;
    margin-top: 1;
}

#rename-dialog-buttons Button {
    margin-left: 1;
    margin-right: 1;
}